<h2> New Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <% if @product.images.present? %>
    <span>目前商品图</span>
    <%= image_tag(@product.image.thumb.url) %>
    <% end %>

    <div class="group">
      <%= f.file_field:images, as: :file, multiple:true %>
    </div>
  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
